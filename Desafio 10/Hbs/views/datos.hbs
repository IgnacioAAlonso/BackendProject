{{#if productos}}
    <h1 style="color: blue">Productos: </h1>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            {{#each productos}}
                 <tr>
                <td> {{this.nombre}} </td>
                <td> {{this.precio}} </td>
                <td> 
                    <img src="{{this.imagen}}" alt="No se encontrÃ³ una imagen valida" width="50px"/> 
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
    <a class="btn btn-info mt-3 mb-5" href="/">Cargar Producto</a>
     
{{else}} 
   <h3 class="btn-danger mt-3 ml-2 col-3" style="color: black">No existen productos</h3>
   <a class="btn btn-info mt-3 mb-5 ml-2" href="/">Cargar Producto</a>
{{/if}}