<header>
    <%- include('./encabezado.ejs') %>
</header>
<body>
    <h2 style="color: crimson">Historial</h2>
    <% if(productos.length !== 0) { %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
           <% for (const producto in productos ) { %>
            <tr>
                <td> <%= productos[producto].nombre %> </td>
                <td> <%= productos[producto].precio %> </td>
                <td>
                    <img src="<%= productos[producto].imagen %>" alt="No se encontrÃ³ una imagen valida" width="50px"/> 
                </td>
            </tr>
            <% } %>
        </table>
        <a class="btn btn-info mt-3 mb-5" href="/">Cargar Producto</a>
    </div>
    <% } else{ %> 
        <h3 class="btn-danger mt-3 ml-2 col-3" style="color: black">No existen productos</h3>
        <a class="btn btn-info mt-3 mb-5 ml-2" href="/">Cargar Producto</a>
        <% }%>
</body>

